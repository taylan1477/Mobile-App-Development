<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VizeSinavim"
        tools:targetApi="31">
        <!--  SplashScreenActivity: Giriş ekranı  -->
        <activity android:name=".SplashScreenActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!--  LoginActivity: Kullanıcı giriş ekranı  -->
        <activity android:name=".LoginActivity" android:exported="false"/>
        <!--  MainActivity: Uygulama ana ekranı  -->
        <activity android:name=".MainActivity" android:exported="false"/>
        <activity android:name=".YemekListesiActivity" android:exported="false"/>
        <activity android:name=".YemekDetayActivity" android:exported="false"/>
        <activity android:name=".YemekEkleActivity" android:exported="false"/>
    </application>
</manifest>